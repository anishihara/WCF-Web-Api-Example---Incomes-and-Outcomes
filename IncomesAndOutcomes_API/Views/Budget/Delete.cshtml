@model IncomesAndOutcomes_API.Models.Budget

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Budget</legend>

    <div class="display-label">MonthBuffer</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.MonthBuffer).ToString()</div>

    <div class="display-label">Category</div>
    <div class="display-field">@(Model.Category == null ? "None" : Model.Category.Name)</div>

    <div class="display-label">Outcomes</div>
    <div class="display-field">@(Model.Outcomes == null ? "None" : Model.Outcomes.Count.ToString())</div>

    <div class="display-label">Amount</div>
    <div class="display-field">@Model.Amount</div>

    <div class="display-label">Month</div>
    <div class="display-field">@Model.Month</div>

    <div class="display-label">Year</div>
    <div class="display-field">@Model.Year</div>

    <div class="display-label">IsDeleted</div>
    <div class="display-field">@Model.IsDeleted</div>

    <div class="display-label">IsActive</div>
    <div class="display-field">@Model.IsActive</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


