@model IncomesAndOutcomes_API.Models.Income

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Income</legend>

    <div class="display-label">AccountBalance</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.AccountBalance).ToString()</div>

    <div class="display-label">MonthBuffer</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.MonthBuffer).ToString()</div>

    <div class="display-label">Amount</div>
    <div class="display-field">@Model.Amount</div>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>

    <div class="display-label">Memo</div>
    <div class="display-field">@Model.Memo</div>

    <div class="display-label">IsDeleted</div>
    <div class="display-field">@Model.IsDeleted</div>

    <div class="display-label">AvailableNextMonth</div>
    <div class="display-field">@Model.AvailableNextMonth</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


