@model IEnumerable<IncomesAndOutcomes_API.Models.Outcome>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            AccountBalance
        </th>
        <th>
            Budget
        </th>
        <th>
            Amount
        </th>
        <th>
            Date
        </th>
        <th>
            Memo
        </th>
        <th>
            IsDeleted
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutcomeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OutcomeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OutcomeId })
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.AccountBalance).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Budget).ToString()
        </td>
        <td>
			@item.Amount
        </td>
        <td>
			@String.Format("{0:g}", item.Date)
        </td>
        <td>
			@item.Memo
        </td>
        <td>
			@item.IsDeleted
        </td>
    </tr>
}

</table>


