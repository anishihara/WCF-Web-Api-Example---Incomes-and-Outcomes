@model IEnumerable<IncomesAndOutcomes.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Budgets
        </th>
        <th>
            Name
        </th>
        <th>
            Balance
        </th>
        <th>
            IsDeleted
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CategoryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryId })
        </td>
        <td>
			@(item.Budgets == null ? "None" : item.Budgets.Count.ToString())
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Balance
        </td>
        <td>
			@item.IsDeleted
        </td>
    </tr>
}

</table>


